<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#940000">

    <TextView
        android:id="@+id/passwordView"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="#TM%49!84_PM"
        android:textColor="#000"
        android:textSize="24sp"
        android:background="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:id="@+id/copyToClipboard"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:text="Copy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.192"
        app:layout_constraintStart_toEndOf="@+id/generate"
        app:layout_constraintTop_toBottomOf="@+id/passwordView" />

    <Button
        android:id="@+id/generate"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:text="Generate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordView" />

    <SeekBar
        android:id="@+id/length_seekBar"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:progress="12"
        app:layout_constraintStart_toEndOf="@+id/passLengthText"
        app:layout_constraintTop_toBottomOf="@+id/generate" />

    <TextView
        android:id="@+id/length_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textFontWeight="2000"
        android:text="@string/password_length_indicator"


        app:layout_constraintLeft_toRightOf="@id/length_seekBar"
        app:layout_constraintTop_toBottomOf="@id/generate"
        ></TextView>

    <TextView
        android:id="@+id/passLengthText"
        android:layout_width="110dp"
        android:layout_height="22dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="32dp"
        android:text="Length"
        android:textColor="#FFF"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generate" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="273dp"
        android:layout_height="26dp"
        android:text="Uppercases"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passLengthText"
        android:checked="true"/>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="273dp"
        android:layout_height="26dp"
        android:text="Numbers"
        android:textColor="#FFF"
        android:checked="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="273dp"
        android:layout_height="26dp"
        android:text="Special Characters"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch2" />

</androidx.constraintlayout.widget.ConstraintLayout>