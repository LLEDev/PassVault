<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDTU"
    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".20"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".80" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_passvault" />

    <EditText
        android:id="@+id/reg_master_username_editText"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:hint="@string/add_input_username"
        android:textColorHint="#FFF"
        android:textColor="#FFF"
        app:layout_constraintRight_toRightOf="@id/guideline_right"
        app:layout_constraintLeft_toRightOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        ></EditText>

    <EditText
        android:id="@+id/reg_master_password_editText1"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:hint="@string/add_input_master_password"
        android:textColorHint="#FFF"
        android:textColor="#FFF"
        android:layout_marginTop="10sp"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/reg_master_username_editText"
        >
    </EditText>

    <EditText
        android:id="@+id/reg_master_password_editText2"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:hint="@string/add_input_master_password_again"
        android:textColorHint="#FFF"
        android:textColor="#FFF"
        android:layout_marginTop="10sp"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toLeftOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/reg_master_password_editText1"
        >
    </EditText>

    <TextView
        android:id="@+id/password_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Strength:"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/reg_master_password_editText2"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"

        ></TextView>

    <ProgressBar
        android:id="@+id/progressbar"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:progressDrawable="@drawable/pb_drawable_green"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintLeft_toLeftOf="@id/guideline_left"
        app:layout_constraintRight_toRightOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/password_strength"
        />

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     app:layout_constraintTop_toBottomOf="@id/progressbar"
     app:layout_constraintLeft_toLeftOf="@id/guideline_left"
     app:layout_constraintRight_toRightOf="@id/guideline_right"
     >
     <Button
         android:id="@+id/reset_btn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:text="@string/reset_input"
         app:layout_constraintHorizontal_bias="0.109"
         app:layout_constraintLeft_toLeftOf="@id/guideline_left"
         app:layout_constraintRight_toLeftOf="@id/save_registration"
        ></Button>

     <Button
         android:id="@+id/save_registration"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:text="@string/save_registration"
         app:layout_constraintRight_toLeftOf="@+id/guideline_right"
         app:layout_constraintLeft_toRightOf="@id/reset_btn"
         tools:layout_editor_absoluteX="206dp"></Button>

 </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>